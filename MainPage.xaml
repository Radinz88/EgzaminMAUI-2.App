<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:w="clr-namespace:EgzaminMAUI_2"
             xmlns:mw="clr-namespace:EgzaminMAUI_2.ModelWidoku"
             x:Class="EgzaminMAUI_2.MainPage">

    <ContentPage.BindingContext>
        <mw:TextMW/>
    </ContentPage.BindingContext>

    <ContentPage.Resources>
        <w:IntToStringConverter x:Key="i2s"/>
    </ContentPage.Resources>

    <VerticalStackLayout>

        <Editor x:Name="Ed1"
                HeightRequest="60"
                FontSize="30"
                Text="{Binding EdTextMW}"
                Margin="10"/>

        <Label x:Name="Lbl1" 
               Text="{Binding EdTextMW}"
               TextColor="{Binding LblColorMW}"
               WidthRequest="400" HeightRequest="60"
               FontSize="20" HorizontalTextAlignment="Center"
               Margin="10"/>

        <Label x:Name="Lbl2" 
               Text="{Binding LengthMW, Mode=OneWay, Converter={StaticResource i2s}}"
               TextColor="{Binding LblColorMW}"
               WidthRequest="100" HeightRequest="60"
               FontSize="20" HorizontalTextAlignment="Center"
               Margin="10"/>

        <Label x:Name="Lbl3" 
               Text="{Binding VowelsMW, Mode=OneWay, Converter={StaticResource i2s}}"
               TextColor="{Binding LblColorMW}"
               WidthRequest="100" HeightRequest="60"
               FontSize="20" HorizontalTextAlignment="Center"
               Margin="10"/>

        <Button x:Name="btn" 
                WidthRequest="200" HeightRequest="60"
                Command="{Binding ZmianaNapisu}"
                Text="Zmiana tekstu"
                FontSize="20"
                Margin="10"/>

    </VerticalStackLayout>
</ContentPage>
